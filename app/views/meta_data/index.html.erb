<%= meta_data = @resource.meta_data_for_context(@context, false)
if meta_data.empty?
	content_tag :div, :class => "meta_data_comment" do
		_("There is no metadata for this context.")
	end
else
	content_tag :table, :class => "meta_data" do
		a = "".html_safe
		meta_data.each do |meta_datum|
			#old# next unless meta_datum.value
			#tmp# OPTIMIZE 2007
			next if meta_datum.to_s.blank?
	
			definition = meta_datum.meta_key.meta_key_definitions.for_context(@context)
	
			a += content_tag :tr do
				b = content_tag :td do
	              content_tag :label do
					"#{definition.meta_field.label}"
	              end
				end
				b += content_tag :td do
					#= render :partial => "/meta_data/show", :locals => { :meta_datum => meta_datum, :resource => @resource, :context => @context }
					formatted_value(meta_datum)
				end
			end
		end
		a
	end
end %>
