- if logged_in?
  %li
    .head_menu
      = link_to current_user, root_path
      = theme_image_tag "icons/arrow_user.png", :class => "arrow"
    .sub_menu
      = link_to _("My media"), user_media_entries_path(current_user)
      = link_to _("My sets"), user_media_sets_path(current_user)
      = link_to _("My favorites"), favorites_media_entries_path
      = link_to _("Archival copies"), snapshots_path if current_user.groups.is_member?("MIZ-Archiv")
      = link_to _("My groups"), groups_path, :class => "item_line"
      = link_to _("Admin"), admin_root_path, :class => "item_line" if current_user.groups.is_member?("Admin")
      = link_to _("Log out"), logout_path, :class => "item_line"
- else
  %li
    %span.head_menu{:style => "background: #AAD450; -moz-border-radius: 3px; -webkit-border-radius: 3px;"}
      = link_to _("Log in"), login_path, :style => "background: #AAD450; color:#fff"