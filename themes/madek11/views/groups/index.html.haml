%h2.groups Meine Gruppen

%table.groups
  %tbody
    %tr
      %th
        
%ul.groups
  - @groups.each do |group|
    %li
      = group
      - unless group.is_readonly?
        = link_to _("Edit"), edit_group_path(group), :class => "meta_data_label1"
        = link_to _("Delete"), group_path(group), :class => "meta_data_label2", :method => :delete, :confirm => _("Are you sure?")
      
  %li
    = link_to _("Create new group"), new_group_path, :class => "buttons"